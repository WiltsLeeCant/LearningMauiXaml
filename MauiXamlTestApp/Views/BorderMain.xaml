<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiXamlTestApp.BorderMain"
             Title="Border">
    <VerticalStackLayout>
        <Label 
            Text="Border for search bar"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        
        <Border 
            HorizontalOptions="Center"
             Padding="2,8"
             Stroke="#C49B33"
             StrokeThickness="1"
             StrokeShape="RoundRectangle 10,10,10,10"
             WidthRequest="250" >

        <SearchBar />

        </Border>
    </VerticalStackLayout>
</ContentPage>
    
<!-- Borders live around items. -->