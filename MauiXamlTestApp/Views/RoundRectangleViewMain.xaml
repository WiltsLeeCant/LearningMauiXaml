<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiXamlTestApp.RoundRectangleViewMain"
             Title="RoundRectangleViewMain">
    <VerticalStackLayout>
        <Label 
            Text="Round rectangle"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Rectangle Fill="Blue"
           Stroke="Black"
           StrokeThickness="3"
           RadiusX="50"
           RadiusY="10"
           WidthRequest="200"
           HeightRequest="100"
           HorizontalOptions="Start" />
    </VerticalStackLayout>
</ContentPage>
    
<!-- Like regular rectangle but round. -->