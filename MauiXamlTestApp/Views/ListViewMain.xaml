<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiXamlTestApp.ListViewMainMain"
             Title="ListViewMain">
    <VerticalStackLayout>
        <Label 
            Text="Listview"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <ListView>
            <ListView.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>1</x:String>
                    <x:String>2</x:String>
                    <x:String>3</x:String>
                    <x:String>4</x:String>
                    <x:String>5</x:String>
                </x:Array>
            </ListView.ItemsSource>
        </ListView>
    </VerticalStackLayout>
</ContentPage>
    
<!-- Shows a basic list. -->