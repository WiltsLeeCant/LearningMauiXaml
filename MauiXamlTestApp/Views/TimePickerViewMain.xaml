<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:viewmodel="clr-namespace:MauiXamlTestApp.ViewModels"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiXamlTestApp.TimePickerViewMain"
             x:DataType="viewmodel:TimePickerViewModel"
             Title="TimePickerViewMain">
    <VerticalStackLayout>
        <Label 
            Text="Time picker"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <TimePicker 
            Time="{Binding SelectedTime}" />
    </VerticalStackLayout>
</ContentPage>
    
<!-- Timer pickers which helps us select time. -->